                <div class="option" data-value="diljit">
                    <i class="fas fa-flag"></i>
                    <span>Diljit Dosanjh</span>
                </div>
                <div class="option" data-value="sidhu">
                    <i class="fas fa-bolt"></i>
                    <span>Sidhu Moosewala</span>
                </div>
                <div class="option" data-value="karan">
                    <i class="fas fa-trumpet"></i>
                    <span>Karan Aujla</span>
                </div>
                <div class="option" data-value="guru">
                    <i class="fas fa-drum-steelband"></i>
                    <span>Guru Randhawa</span>
                </div>
                <div class="option" data-value="amrinder">
                    <i class="fas fa-violin"></i>
                    <span>Amrinder Gill</span>
                </div>
                <div class="option" data-value="sharry">
                    <i class="fas fa-wind"></i>
                    <span>Sharry Mann</span>
                </div>
            </div>
            <div class="navigation">
                <button class="btn btn-prev" id="prev3"><i class="fas fa-arrow-left"></i> Back</button>
                <button class="btn btn-submit" id="submit" disabled>Generate Wish <i class="fas fa-gift"></i></button>
            </div>
        </div>
        
        <!-- Result -->
        <div class="step" id="result">
            <div class="result-container">
                <h2 class="result-title">Your Personalized New Year Wish</h2>
                <div class="wish-card">
                    <div class="wish-text" id="wishText"></div>
                    <div id="artistBadge"></div>
                </div>
                <button class="btn btn-submit" id="restart">Generate Another Wish <i class="fas fa-redo"></i></button>
            </div>
        </div>
    </div>

    <script>
        // Store user selections
        const selections = {
            mood: null,
            yearRating: null,
            artists: []
        };

        // Artist names mapping
        const artistNames = {
            // Hindi Artists
            arjit: "Arijit Singh",
            rahman: "A.R. Rahman",
            shreya: "Shreya Ghoshal",
            sonu: "Sonu Nigam",
            atif: "Atif Aslam",
            neha: "Neha Kakkar",
            
            // Hollywood Artists
            taylor: "Taylor Swift",
            weeknd: "The Weeknd",
            drake: "Drake",
            billie: "Billie Eilish",
            ed: "Ed Sheeran",
            ariana: "Ariana Grande",
            
            // Pollywood Artists
            diljit: "Diljit Dosanjh",
            sidhu: "Sidhu Moosewala",
            karan: "Karan Aujla",
            guru: "Guru Randhawa",
            amrinder: "Amrinder Gill",
            sharry: "Sharry Mann"
        };

        // Wishes templates
        const wishTemplates = [
            "Hey there! This New Year wish comes to you from Sarthak. As you step into the New Year, may your heart continue to be {mood}. Your 2025 was {yearRating}, and I hope 2026 brings you even more joy and success. May the music of {artists} continue to inspire your journey! Wishing you a spectacular New Year filled with love, laughter, and dreams come true.",
            "Warmest wishes for the New Year from Sarthak! With your {mood} spirit, you're ready to conquer 2026. Though 2025 was {yearRating}, the best is yet to come. Let the rhythms of {artists} guide you to new adventures. May your year be filled with harmony, happiness, and heartfelt moments!",
            "Sarthak sends you New Year blessings! Your {mood} energy will carry you through 2026. Even though 2025 was {yearRating}, remember that every challenge makes you stronger. Let the beats of {artists} keep you moving forward. Here's to a year of melody, meaning, and magnificent memories!",
            "From Sarthak with love - Happy New Year! As someone who's {mood}, you're perfectly positioned for an amazing 2026. Your 2025 journey was {yearRating}, but this year will be your masterpiece. Let {artists}' music be your soundtrack to success. May your days be filled with rhythm, reason, and radiant joy!",
            "Sarthak wishes you a joyful New Year! With your {mood} attitude, 2026 will be incredible. Your 2025 experience was {yearRating}, but every year brings new opportunities. Let the harmonies of {artists} lift your spirit. Here's to a year of music, magic, and magnificent achievements!"
        ];

        // Year rating messages
        const yearMessages = {
            worst: "challenging but character-building",
            bad: "tough but taught valuable lessons",
            average: "steady with moments of growth",
            good: "full of wonderful moments",
            "very-good": "absolutely amazing and fulfilling"
        };

        // Mood messages
        const moodMessages = {
            happy: "radiating positivity",
            excited: "bursting with energy",
            calm: "peaceful and centered",
            tired: "reflective and ready for rest",
            hopeful: "looking forward with optimism",
            nostalgic: "cherishing the memories"
        };

        // DOM Elements
        const steps = document.querySelectorAll('.step');
        const options = document.querySelectorAll('.option');
        const progress = document.getElementById('progress');
        const next1 = document.getElementById('next1');
        const next2 = document.getElementById('next2');
        const prev2 = document.getElementById('prev2');
        const prev3 = document.getElementById('prev3');
        const submit = document.getElementById('submit');
        const restart = document.getElementById('restart');
        const wishText = document.getElementById('wishText');
        const artistBadge = document.getElementById('artistBadge');
        const fireworks = document.getElementById('fireworks');

        // Option selection handler - allow multiple selections
        options.forEach(option => {
            option.addEventListener('click', function() {
                // Toggle selection
                this.classList.toggle('selected');
                
                // Determine which step we're in and store selection
                const stepId = this.closest('.step').id;
                
                if (stepId === 'step1') {
                    selections.mood = this.dataset.value;
                    next1.disabled = false;
                } else if (stepId === 'step2') {
                    selections.yearRating = this.dataset.value;
                    next2.disabled = false;
                } else if (stepId === 'step3') {
                    const artistValue = this.dataset.value;
                    
                    // Add to artists array if not already selected
                    if (!selections.artists.includes(artistValue)) {
                        selections.artists.push(artistValue);
                    } else {
                        // Remove from array if already selected
                        selections.artists = selections.artists.filter(item => item !== artistValue);
                    }
                    
                    // Enable submit if at least one artist is selected
                    submit.disabled = selections.artists.length === 0;
                }
            });
        });

        // Navigation handlers
        next1.addEventListener('click', () => goToStep(2));
        next2.addEventListener('click', () => goToStep(3));
        prev2.addEventListener('click', () => goToStep(1));
        prev3.addEventListener('click', () => goToStep(2));
        submit.addEventListener('click', showResult);
        restart.addEventListener('click', resetApp);

        // Step navigation function
        function goToStep(stepNumber) {
            // Hide all steps
            steps.forEach(step => step.classList.remove('active'));
            
            // Show the target step
            document.getElementById(`step${stepNumber}`).classList.add('active');
            
            // Update progress bar
            progress.style.width = `${stepNumber * 33}%`;
            
            // Create confetti on step transitions
            createConfetti();
        }

        // Show result function
        function showResult() {
            steps.forEach(step => step.classList.remove('active'));
            document.getElementById('result').classList.add('active');
            progress.style.width = '100%';
            
            // Generate personalized wish
            generateWish();
            
            // Create fireworks effect
            createFireworks();
        }

        // Generate personalized wish text
        function generateWish() {
            const mood = selections.mood;
            const yearRating = selections.yearRating;
            const artists = selections.artists;
            
            // Get a random template
            const randomTemplate = wishTemplates[Math.floor(Math.random() * wishTemplates.length)];
            
            // Format the wish
            let wish = randomTemplate
                .replace("{mood}", moodMessages[mood])
                .replace("{yearRating}", yearMessages[yearRating]);
            
            // Format artists - if multiple selected, join with commas and "and"
            if (artists.length > 0) {
                const artistList = artists.map(artist => artistNames[artist]);
                
                if (artistList.length === 1) {
                    wish = wish.replace("{artists}", artistList[0]);
                } else if (artistList.length === 2) {
                    wish = wish.replace("{artists}", artistList.join(" and "));
                } else {
                    const lastArtist = artistList.pop();
                    wish = wish.replace("{artists}", artistList.join(", ") + ", and " + lastArtist);
                }
            }
            
            wishText.textContent = wish;
            
            // Create artist badge
            const artistNamesList = artists.map(artist => artistNames[artist]);
            artistBadge.innerHTML = `<i class="fas fa-music"></i> Fan of ${artistNamesList.join(", ")}`;
        }

        // Create confetti effect
        function createConfetti() {
            const colors = ['#ffd700', '#ff8c00', '#ff4500', '#ffffff', '#00ff00'];
            
            for (let i = 0; i < 30; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
                document.body.appendChild(confetti);
                
                // Remove after animation completes
                setTimeout(() => {
                    confetti.remove();
                }, 4000);
            }
        }

        // Create fireworks effect
        function createFireworks() {
            const colors = ['#ffd700', '#ff8c00', '#ff4500', '#ffffff', '#00ff00'];
            
            for (let i = 0; i < 5; i++) {
                setTimeout(() => {
                    const x = Math.random() * 80 + 10; // 10-90%
                    const y = Math.random() * 60 + 20; // 20-80%
                    
                    const firework = document.createElement('div');
                    firework.classList.add('firework');
                    firework.style.left = x + '%';
                    firework.style.top = y + '%';
                    firework.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    fireworks.appendChild(firework);
                    
                    // Remove after animation completes
                    setTimeout(() => {
                        firework.remove();
                    }, 1500);
                }, i * 400);
            }
        }

        // Reset the application
        function resetApp() {
            // Reset selections
            selections.mood = null;
            selections.yearRating = null;
            selections.artists = [];
            
            // Reset UI
            options.forEach(opt => opt.classList.remove('selected'));
            next1.disabled = true;
            next2.disabled = true;
            submit.disabled = true;
            
            // Go back to step 1
            steps.forEach(step => step.classList.remove('active'));
            document.getElementById('step1').classList.add('active');
            progress.style.width = '33%';
            
            // Clear result
            wishText.textContent = '';
            artistBadge.innerHTML = '';
            
            // Clear fireworks
            fireworks.innerHTML = '';
        }

        // Initialize with some confetti for visual appeal
        setTimeout(createConfetti, 500);
    </script>
</body>
</html>
