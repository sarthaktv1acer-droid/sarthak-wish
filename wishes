                <button class="btn btn-next" id="next1" disabled>Next <i class="fas fa-arrow-right"></i></button>
            </div>
        </div>
        
        <!-- Stage 2: Year Rating -->
        <div class="step" id="step2">
            <h2 class="step-title">How was your 2025?</h2>
            <div class="options-container">
                <div class="option" data-value="worst">
                    <i class="fas fa-sad-tear"></i>
                    <span>Worst</span>
                </div>
                <div class="option" data-value="bad">
                    <i class="fas fa-frown"></i>
                    <span>Bad</span>
                </div>
                <div class="option" data-value="average">
                    <i class="fas fa-meh"></i>
                    <span>Average</span>
                </div>
                <div class="option" data-value="good">
                    <i class="fas fa-smile"></i>
                    <span>Good</span>
                </div>
                <div class="option" data-value="very-good">
                    <i class="fas fa-grin-stars"></i>
                    <span>Very Good</span>
                </div>
            </div>
            <div class="navigation">
                <button class="btn btn-prev" id="prev2"><i class="fas fa-arrow-left"></i> Back</button>
                <button class="btn btn-next" id="next2" disabled>Next <i class="fas fa-arrow-right"></i></button>
            </div>
        </div>
        
        <!-- Stage 3: Artist Selection -->
        <div class="step" id="step3">
            <h2 class="step-title">Select your favorite artists (Choose 1-3)</h2>
            <div class="options-container">
                <!-- Hindi Artists -->
                <div class="option" data-value="arjit">
