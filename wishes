            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: shine 2s infinite;
        }
        
        @keyframes shine {
            0% { text-shadow: 0 0 10px rgba(255, 215, 0, 0.7); }
            50% { text-shadow: 0 0 25px rgba(255, 215, 0, 0.9), 0 0 40px rgba(255, 140, 0, 0.8); }
            100% { text-shadow: 0 0 10px rgba(255, 215, 0, 0.7); }
        }
        
        .header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        .creator {
            font-style: italic;
            color: #ffd700;
            margin-top: 10px;
        }
        
        .progress-container {
            display: flex;
            justify-content: center;
            padding: 20px 0;
            background: rgba(0, 0, 0, 0.3);
        }
        
        .progress-bar {
            width: 80%;
            height: 10px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 5px;
            overflow: hidden;
            display: flex;
        }
        
        .progress {
            height: 100%;
            background: linear-gradient(to right, #ffd700, #ff8c00);
            width: 33%;
            transition: width 0.5s ease;
            border-radius: 5px;
        }
        
        .step {
            padding: 30px;
            min-height: 400px;
            display: none;
            animation: fadeIn 0.5s ease;
        }
        
        .step.active {
            display: block;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .step-title {
            font-size: 1.8rem;
            margin-bottom: 25px;
            text-align: center;
            color: #ffd700;
            text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
        }
        
        .options-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-bottom: 30px;
        }
        
        .option {
            background: rgba(255, 255, 255, 0.08);
            border: 2px solid rgba(255, 255, 255, 0.15);
            border-radius: 12px;
            padding: 20px 15px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100px;
        }
        
        .option:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-5px);
            border-color: rgba(255, 215, 0, 0.5);
        }
        
        .option.selected {
            background: rgba(255, 215, 0, 0.2);
            border-color: #ffd700;
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
            transform: scale(1.05);
        }
        
        .option i {
            font-size: 2rem;
            margin-bottom: 10px;
        }
        
        .navigation {
            display: flex;
            justify-content: space-between;
            padding: 20px 30px;
            background: rgba(0, 0, 0, 0.3);
        }
        
        .btn {
            padding: 12px 30px;
            border: none;
            border-radius: 30px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .btn-prev {
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }
        
        .btn-next, .btn-submit {
            background: linear-gradient(45deg, #ffd700, #ff8c00);
            color: #1a1a1a;
        }
        
        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .btn:hover:not(:disabled) {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(255, 215, 0, 0.4);
        }
        
        .result-container {
            text-align: center;
            padding: 40px 20px;
            animation: fadeIn 0.8s ease;
        }
        
        .result-title {
            font-size: 2.2rem;
            margin-bottom: 20px;
            color: #ffd700;
        }
        
        .wish-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            padding: 25px;
            margin: 25px auto;
            max-width: 600px;
            border: 1px solid rgba(255, 215, 0, 0.3);
            position: relative;
            overflow: hidden;
        }
        
        .wish-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(to right, #ffd700, #ff8c00, #ff4500);
        }
        
        .wish-text {
            font-size: 1.4rem;
            line-height: 1.6;
            margin-bottom: 20px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }
        
        .artist-badge {
            display: inline-block;
            background: rgba(255, 215, 0, 0.2);
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
            margin-top: 10px;
            border: 1px solid #ffd700;
        }
        
        .fireworks {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }
        
        .firework {
            position: absolute;
            width: 5px;
            height: 5px;
            border-radius: 50%;
            box-shadow: 0 0 10px #ffd700, 0 0 20px #ff8c00;
            animation: explode 1.5s ease-out forwards;
        }
        
        @keyframes explode {
            0% { transform: scale(1); opacity: 1; }
            100% { transform: scale(30); opacity: 0; }
        }
        
        .confetti {
            position: absolute;
            width: 10px;
            height: 10px;
            background: #ffd700;
            top: -10px;
            animation: fall 3s linear forwards;
            z-index: -1;
        }
        
        @keyframes fall {
            to { transform: translateY(100vh) rotate(720deg); }
        }
        
        @media (max-width: 600px) {
            .header h1 { font-size: 2rem; }
            .options-container { grid-template-columns: repeat(2, 1fr); }
            .step { padding: 20px; }
            .wish-text { font-size: 1.1rem; }
        }
    </style>
